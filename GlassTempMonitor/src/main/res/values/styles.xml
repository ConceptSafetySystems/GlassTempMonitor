<resources>

    <style name="Meter">
        <item name="android:layout_width">180px</item>
        <item name="android:layout_height">130px</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">-20px</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">120px</item>
    </style>

    <style name="Label">
        <item name="android:layout_width">180px</item>
        <item name="android:layout_height">50px</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginTop">0px</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">40px</item>
    </style>

    <style name="MenuTheme" parent="@android:style/Theme.DeviceDefault">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

</resources>
